        <Label Content="Destination Folder" HorizontalAlignment="Left" Margin="56,125,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox IsEnabled="False" HorizontalAlignment="Left" Height="31" Margin="241,62,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="331" Name="txtSource"/>
